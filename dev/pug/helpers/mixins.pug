mixin icon(name,mod)
	if(mod)
		svg(class="svg-sprite-icon icon-" + name + ' ' + mod)
			use(xlink:href="static/images/sprite/symbol/sprite.svg#" + name)
	else
		svg(class="svg-sprite-icon icon-" + name)
			use(xlink:href="static/images/sprite/symbol/sprite.svg#" + name)

mixin webp(name, src='content', type='jpg',alt)
	picture
		source(srcset="/static/images/"+src+"/"+name+".webp", type="image/webp")
		source(srcset="/static/images/"+src+"/"+name+"."+type+"", type="image/"+type+"")
		img(src="/static/images/"+src+"/"+name+"."+type+"", alt=""+alt+"").lazyload
